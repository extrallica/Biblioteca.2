    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorFrontalLibro</servlet-name>
        <url-pattern>/ControladorFrontalLibro</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
